<!DOCTYPE html>
<html lang="id">
  <head>
    <meta charset="UTF-8" />
    <title>Register</title>
    <link rel="stylesheet" href="/stylesheets/logres.css" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  </head>
  <body>
    <div class="container" id="container">
      <div class="form-container sign-up animate-in">
        <form action="/register" method="POST">
          <h2>Register</h2>

          <% if (success) { %>
            <div class="success"><%= success %></div>
          <% } %>
          <% if (error) { %>
            <div class="alert"><%= error %></div>
          <% } %>

          <div class="input-group">
            <label for="email">Email</label>
            <input
              id="email"
              type="email"
              name="email"
              required
              oninvalid="this.setCustomValidity('Emailnya belum kamu isi loh!!')"
              oninput="this.setCustomValidity('')"
            />
          </div>

          <div class="input-group">
            <label for="username">Username</label>
            <input
              id="username"
              type="text"
              name="username"
              required
              oninvalid="this.setCustomValidity('Usernamenya belum kamu isi loh!!')"
              oninput="this.setCustomValidity('')"
            />
          </div>

          <div class="input-group">
            <label for="password">Password</label>
            <input
              id="password"
              type="password"
              name="password"
              required
              oninvalid="this.setCustomValidity('Passwordnya belum kamu isi loh!!')"
              oninput="this.setCustomValidity('')"
            />
          </div>

          <button type="submit">Daftar</button>
          <p>Sudah punya akun? <a href="/login">Login</a></p>
        </form>
      </div>

      <div class="toggle-container">
        <div class="glow-box">
          <h1 id="typing-text"></h1>
          <p id="fade-text">Silakan daftar untuk menjelajahi hal baru! ğŸ‰</p>
          <div class="animated-border"></div>
        </div>
      </div>
    </div>

    <script src="/javascripts/logres.js"></script>
  </body>
</html>
