
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Tambah notifikasi</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body><div class="container mt-4">
  <h2>Tambah Notifikasi</h2>
  <form action="/notifikasi_crud/create" method="POST">
    <div class="mb-3">
      <label>User</label>
      <select name="id_user" class="form-select" required>
        <% users.forEach(u => { %>
          <option value="<%= u.id %>"><%= u.username %></option>
        <% }) %>
      </select>
    </div>

    <div class="mb-3">
      <label>Pemesanan</label>
      <select name="id_pemesanan" class="form-select" required>
        <% pemesanan.forEach(p => { %>
          <option value="<%= p.id_pemesanan %>">#<%= p.id_pemesanan %></option>
        <% }) %>
      </select>
    </div>
    
    <div class="mb-3">
      <label>Isi Pesan</label>
      <textarea name="isi_pesan" class="form-control" required></textarea>
    </div>

    <div class="mb-3">
      <label>Waktu Kirim</label>
      <input type="datetime-local" name="waktu_kirim" class="form-control" required>
    </div>

    <div class="mb-3">
      <label>Status Baca</label>
      <select name="status_baca" class="form-select">
        <option value="belum">Belum</option>
        <option value="sudah">Sudah</option>
      </select>
    </div>

    <button type="submit" class="btn btn-success">Simpan</button>
    <a href="/pemesanan" class="btn btn-secondary">Kembali</a>
  </form>
</div>
</body>
</html>
