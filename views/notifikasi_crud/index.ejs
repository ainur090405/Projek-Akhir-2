
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Data notifikasi</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
<div class="container mt-4">
  <h2 class="mb-4">Daftar Notifikasi</h2>
  <a href="/notifikasi_crud/create" class="btn btn-primary mb-3">Tambah Notifikasi</a>

  <table class="table table-bordered">
    <thead class="table-light">
      <tr>
        <th>ID</th>
        <th>Username</th>
        <th>Pemesanan</th>
        <th>Isi Pesan</th>
        <th>Waktu Kirim</th>
        <th>Status Baca</th>
        <th>Aksi</th>
      </tr>
    </thead>
    <tbody>
      <% notifikasi.forEach(n => { %>
        <tr>
          <td><%= n.id_notifikasi %></td>
          <td><%= n.username %></td>
          <td>#<%= n.id_pemesanan %></td>
          <td><%= n.isi_pesan %></td>
          <td><%= new Date(n.waktu_kirim).toLocaleString('id-ID', { dateStyle: 'short', timeStyle: 'short' }) %></td>
          <td><%= n.status_baca %></td>
          <td>
            <a href="/notifikasi_crud/edit/<%= n.id_notifikasi %>" class="btn btn-sm btn-warning">Edit</a>
            <a href="/notifikasi_crud/delete/<%= n.id_notifikasi %>" class="btn btn-sm btn-danger" onclick="return confirm('Yakin hapus?')">Hapus</a>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
  <div><a href="/master" class="btn btn-secondary me-2">
    <i class="bi bi-arrow-left-circle"></i> Kembali</a></div>
    </div>
</div>
</body>
</html>