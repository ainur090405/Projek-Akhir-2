<!doctype html>
<html lang="id">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Edit Kendaraan</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
<div class="d-flex justify-content-center mt-4 mb-4">
  <div class="container py-4 bg-light p-4 rounded" style="max-width: 700px;">
    <h1 class="mb-4 text-center">Edit Data Kendaraan</h1>

    <form action="/data_kendaraan/edit/<%= kendaraan.id_kendaraan %>" method="POST">
      <input type="hidden" name="id_kendaraan" value="<%= kendaraan.id_kendaraan %>">

      <div class="mb-3">
        <label for="nama_kendaraan" class="form-label">Nama Kendaraan</label>
        <input type="text" name="nama_kendaraan" id="nama_kendaraan" class="form-control" value="<%= kendaraan.nama_kendaraan %>" required>
      </div>

      <div class="mb-3">
        <label for="deskripsi" class="form-label">Deskripsi</label>
        <textarea name="deskripsi" id="deskripsi" class="form-control" rows="3" required><%= kendaraan.deskripsi %></textarea>
      </div>

      <div class="mb-3">
        <label for="lokasi" class="form-label">Lokasi</label>
        <input type="text" name="lokasi" id="lokasi" class="form-control" value="<%= kendaraan.lokasi %>" required>
      </div>

      <div class="mb-3">
        <label for="gambar" class="form-label">Link Gambar</label>
        <input type="text" name="gambar" id="gambar" class="form-control" value="<%= kendaraan.gambar %>">
      </div>

      <div class="mb-3">
        <label for="id_kategori" class="form-label">Kategori Kendaraan</label>
        <select name="id_kategori" id="id_kategori" class="form-select" required>
          <option value="">-- Pilih Kategori --</option>
          <% kategori.forEach(kat => { %>
            <option value="<%= kat.id_kategori %>" <%= kat.id_kategori === kendaraan.id_kategori ? 'selected' : '' %>><%= kat.nama_kategori %></option>
          <% }) %>
        </select>
      </div>

      <div class="d-grid">
        <button type="submit" class="btn btn-primary">Simpan Perubahan</button>
      </div><br>
      <div><a href="/data_kendaraan" class="btn btn-secondary me-2">
        <i class="bi bi-arrow-left-circle"></i> Kembali</a></div>
    </form>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
