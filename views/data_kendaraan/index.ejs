<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Daftar Kendaraan</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
</head>
<body>
  <style>
    body {
      font-family: Arial, sans-serif;
    }
    .table th, .table td {
      vertical-align: middle;
    }
    .table-dark th {
      background-color: #343a40;
      color: white;
    }
  </style>

  <div class="container my-4">
    <% if (messages.success && messages.success.length > 0) { %>
      <div class="alert alert-success">
        <%= messages.success[0] %>
      </div>
    <% } %>
    <% if (messages.error && messages.error.length > 0) { %>
      <div class="alert alert-danger">
        <%= messages.error[0] %>
      </div>
    <% } %>

    <div class="d-flex justify-content-between align-items-center mb-3">
      <h2>Daftar Kendaraan</h2>
      <a href="/data_kendaraan/create" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> create Kendaraan
      </a>
    </div>

    <div class="table-responsive">
      <table class="table table-bordered text-center align-middle">
        <thead class="table-dark">
          <tr>
            <th>#</th>
            <th>Nama Kendaraan</th>
            <th>Deskripsi</th>
            <th>Lokasi</th>
            <th>Gambar</th>
            <th>Kategori</th>
            <th>Aksi</th>
          </tr>
        </thead>
        <tbody>
          <% if (kendaraan.length === 0) { %>
            <tr>
              <td colspan="7" class="text-center">Tidak ada data kendaraan.</td>
            </tr>
          <% } else { %>
            <% kendaraan.forEach((item, i) => { %>
              <tr>
                <td><%= i + 1 %></td>
                <td><%= item.nama_kendaraan %></td>
                <td><%= item.deskripsi %></td>
                <td><%= item.lokasi %></td>
                <td>
                  <% if (item.gambar) { %>
                    <img src="/images/halaman/<%= item.gambar %>" width="100">
                  <% } else { %>
                    Tidak ada gambar
                  <% } %>
                </td>
                <td><%= item.nama_kategori %></td>
                <td>
                  <a href="/data_kendaraan/edit/<%= item.id_kendaraan %>" class="btn btn-sm btn-warning">
                    <i class="bi bi-pencil"></i> Edit
                  </a>
                  <a href="/data_kendaraan/hapus/<%= item.id_kendaraan %>" class="btn btn-sm btn-danger" onclick="return confirm('Yakin ingin menghapus kendaraan ini?');">
                    <i class="bi bi-trash"></i> Hapus
                  </a>
                </td>
              </tr>
            <% }) %>
          <% } %>
        </tbody>
      </table>
      <div>
        <a href="/master" class="btn btn-secondary me-2">
          <i class="bi bi-arrow-left-circle"></i> Kembali
        </a>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
