<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Data Pemesanan</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
<div class="container my-5">
  <h2>Data Pemesanan Kendaraan</h2>

  <% if (messages.success) { %>
    <div class="alert alert-success"><%= messages.success %></div>
  <% } %>

  <a href="/pemesanan/create" class="btn btn-primary mb-3">Tambah Pemesanan</a>

  <table class="table table-bordered">
    <thead class="table-dark">
      <tr>
        <th>No</th>
        <th>Username</th>
        <th>Kendaraan</th>
        <th>Supir</th>
        <th>Tanggal</th>
        <th>Waktu Mulai</th>
        <th>Waktu Selesai</th>
        <th>Status</th>
        <th>Keterangan</th>
        <th>Aksi</th>
      </tr>
    </thead>
    <tbody>
      <% data.forEach((row, i) => { %>
        <tr>
          <td><%= i + 1 %></td>
          <td><%= row.username %></td>
          <td><%= row.nama_kendaraan %></td>
          <td><%= row.nama_supir %></td>
          <td><%= row.tanggal %></td>
          <td><%= row.waktu_mulai %></td>
          <td><%= row.waktu_selesai %></td>
          <td><%= row.status %></td>
          <td><%= row.keterangan %></td>
          <td>
            <a href="/pemesanan/edit/<%= row.id_pemesanan %>" class="btn btn-warning btn-sm">Edit</a>
            <a href="/pemesanan/hapus/<%= row.id_pemesanan %>" class="btn btn-danger btn-sm" onclick="return confirm('Yakin ingin menghapus data ini?')">Hapus</a>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
  <div><a href="/master" class="btn btn-secondary me-2">
    <i class="bi bi-arrow-left-circle"></i> Kembali</a></div>
    </div>
</div>
</body>
</html>
