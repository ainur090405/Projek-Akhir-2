<!DOCTYPE html>
<html>
<head>
  <title>Tambah Jadwal</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <div class="container mt-5">
    <h2>Tambah Jadwal Operasional</h2>
    <form action="/jadwal_operasional_kendaraan/create" method="POST">
      <div class="mb-3">
        <label>Nama Kendaraan</label>
        <select name="id_kendaraan" class="form-control" required>
          <% kendaraan.forEach(k => { %>
            <option value="<%= k.id_kendaraan %>"><%= k.nama_kendaraan %></option>
          <% }) %>
        </select>
      </div>
      <div class="mb-3">
        <label>Hari</label>
        <select name="hari" class="form-control" required>
          <option value="Senin">Senin</option>
          <option value="Selasa">Selasa</option>
          <option value="Rabu">Rabu</option>
          <option value="Kamis">Kamis</option>
          <option value="Jumat">Jumat</option>
          <option value="Sabtu">Sabtu</option>
          <option value="Minggu">Minggu</option>
        </select>
      </div>
      <div class="mb-3">
        <label>Jam Buka</label>
        <input type="time" name="jam_buka" class="form-control" required>
      </div>
      <div class="mb-3">
        <label>Jam Tutup</label>
        <input type="time" name="jam_tutup" class="form-control" required>
      </div>
      <button class="btn btn-success">Simpan</button>
      <a href="/jadwal_operasional_kendaraan" class="btn btn-secondary">Kembali</a>
    </form>
  </div>
</body>
</html>
