<!DOCTYPE html>
<html>
<head>
  <title>Jadwal Operasional</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <div class="container mt-5">
    <h2>Jadwal Operasional</h2>

    <% if (messages.success) { %>
      <div class="alert alert-success"><%= messages.success %></div>
    <% } %>
    <% if (messages.error) { %>
      <div class="alert alert-danger"><%= messages.error %></div>
    <% } %>

    <a href="/jadwal_operasional_kendaraan/create" class="btn btn-primary mb-3">+ Tambah Jadwal</a>
    <table class="table table-bordered">
      <thead class="table-dark">
        <tr>
          <th>#</th>
          <th>Nama Kendaraan</th>
          <th>Hari</th>
          <th>Jam Buka</th>
          <th>Jam Tutup</th>
          <th>Aksi</th>
        </tr>
      </thead>
      <tbody>
        <% data.forEach((item, index) => { %>
          <tr>
            <td><%= index + 1 %></td>
            <td><%= item.nama_kendaraan %></td>
            <td><%= item.hari %></td>
            <td><%= item.jam_buka ? item.jam_buka.substring(0, 5) : '-' %></td>
            <td><%= item.jam_tutup ? item.jam_tutup.substring(0, 5) : '-' %></td>
            <td>
              <a href="/jadwal_operasional_kendaraan/edit/<%= item.id_jadwal %>" class="btn btn-warning btn-sm">Edit</a>
              <a href="/jadwal_operasional_kendaraan/hapus/<%= item.id_jadwal %>" class="btn btn-danger btn-sm" onclick="return confirm('Yakin ingin menghapus?')">Hapus</a>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
    <div><a href="/master" class="btn btn-secondary me-2">
    <i class="bi bi-arrow-left-circle"></i> Kembali</a></div>
    </div>
  </div>
</body>
</html>
