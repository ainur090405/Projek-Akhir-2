<!DOCTYPE html>
<html>
<head>
  <title>Edit Jadwal</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <div class="container mt-5">
    <h2>Edit Jadwal Operasional</h2>
    <form action="/jadwal_operasional_kendaraan/edit/<%= jadwal.id_jadwal %>" method="POST">
      <div class="mb-3">
        <label>Nama Kendaraan</label>
        <select name="id_kendaraan" class="form-control" required>
          <% kendaraan.forEach(k => { %>
            <option value="<%= k.id_kendaraan %>" <%= k.id_kendaraan == jadwal.id_kendaraan ? 'selected' : '' %>><%= k.nama_kendaraan %></option>
          <% }) %>
        </select>
      </div>
      <div class="mb-3">
        <label>Hari</label>
        <select name="hari" class="form-control" required>
          <% ['Senin', 'Selasa', 'Rabu', 'Kamis', 'Jumat', 'Sabtu', 'Minggu'].forEach(h => { %>
            <option value="<%= h %>" <%= jadwal.hari === h ? 'selected' : '' %>><%= h %></option>
          <% }) %>
        </select>
      </div>
      <div class="mb-3">
        <label>Jam Buka</label>
        <input type="time" name="jam_buka" class="form-control" value="<%= jadwal.jam_buka ? jadwal.jam_buka.substring(0, 5) : '' %>" required>
      </div>
      <div class="mb-3">
        <label>Jam Tutup</label>
        <input type="time" name="jam_tutup" class="form-control" value="<%= jadwal.jam_tutup ? jadwal.jam_tutup.substring(0, 5) : '' %>" required>
      </div>
      <button class="btn btn-success">Update</button>
      <a href="/jadwal_operasional_kendaraan" class="btn btn-secondary">Kembali</a>
    </form>
  </div>
</body>
</html>
