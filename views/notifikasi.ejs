<!DOCTYPE html>
<html>
<head>
  <title>Notifikasi Anda</title>
  <link rel="stylesheet" href="/stylesheets/halaman6.css" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <%- include('partials/navbar') %>

  <div class="wrapper d-flex flex-column min-vh-100">
    <div class="page-wrapper flex-grow-1 d-flex justify-content-center align-items-start py-5">
      <div class="container">
        <h3>ðŸ“¨ Notifikasi Pemesanan Anda</h3>
        <% if (notifikasi.length > 0) { %>
          <ul class="list-group">
            <% notifikasi.forEach(n => { %>
              <li class="list-group-item <%= n.status_baca === 'belum' ? 'list-group-item-warning' : '' %>">
                <strong><%= n.jenis.toUpperCase() %></strong> - 
                Mobil <strong><%= n.nama_kendaraan %></strong> untuk tanggal <strong><%= n.tanggal.toISOString().split('T')[0] %></strong>  
                <br>
                <%= n.isi_pesan %> 
                <div class="small text-muted">
                  Status Pemesanan: <%= n.status_pemesanan %> | Dikirim: <%= new Date(n.waktu_kirim).toLocaleString() %>
                </div>
              </li>
            <% }); %>
          </ul>
        <% } else { %>
          <p class="text-muted text-center mt-5">Belum ada notifikasi.</p>
        <% } %>
      </div>
    </div>
  </div>

  <%- include('partials/footer') %>
</body>
</html>
