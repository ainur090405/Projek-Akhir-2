<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Daftar Kendaraan</title>
  <link rel="stylesheet" href="/stylesheets/halaman2.css" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet" />
</head>
<body>
  <%- include('partials/navbar') %>

  <div class="container">
    <h2 class="page-title">Daftar Kendaraan</h2>

    <% if (kendaraan.length === 0) { %>
      <div class="alert alert-warning">Tidak ada kendaraan tersedia saat ini.</div>
    <% } else { %>
      <div class="grid">
        <% kendaraan.forEach((item) => { %>
          <div class="card">
            <% if (item.gambar) { %>
              <img src="/images/halaman/<%= item.gambar %>" class="card-img" alt="Gambar kendaraan" />
            <% } else { %>
              <img src="/img/no-image.jpg" class="card-img" alt="Tidak ada gambar" />
            <% } %>
            <div class="card-content">
              <h3><%= item.nama_kendaraan %></h3>
              <p><%= item.deskripsi %></p>
              <p><strong>Lokasi:</strong> <%= item.lokasi %></p>
              <p><strong>Kategori:</strong> <%= item.nama_kategori %></p>
            </div>
            <div class="card-footer">
              <a href="/pemesanan/create/<%= item.id_kendaraan %>" class="btn">
                <i class="bi bi-cart-check"></i> Pesan Sekarang
              </a>
            </div>
          </div>
        <% }); %>
      </div>
    <% } %>
  </div>

  <%- include('partials/footer') %>
</body>
</html>
