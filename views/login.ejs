<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Login</title>
    <link rel="stylesheet" href="/stylesheets/logres.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css"
      rel="stylesheet"
    />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  </head>

  <body class="bg-light d-flex align-items-center justify-content-center vh-100">
    <div class="container" id="container">
      <div class="row justify-content-center">
        <div class="col-md-6">
          <div class="card shadow p-4 animate-in">
            <div class="card-body">
              <form action="/login" method="POST">
                <h2 class="text-center mb-4">Login</h2>

                <% if (success) { %>
                  <div class="alert alert-success"><%= success %></div>
                <% } %>

                <% if (error) { %>
                  <div class="alert alert-danger"><%= error %></div>
                <% } %>

                <div class="mb-3">
                  <label for="email" class="form-label">Email</label>
                  <input
                    id="email"
                    type="email"
                    name="email"
                    class="form-control"
                    required
                    oninvalid="this.setCustomValidity('Emailnya belum kamu isi loh!!')"
                    oninput="this.setCustomValidity('')"
                  />
                </div>

                <div class="mb-3">
                  <label for="password" class="form-label">Password</label>
                  <input
                    id="password"
                    type="password"
                    name="password"
                    class="form-control"
                    required
                    oninvalid="this.setCustomValidity('Passwordnya belum kamu isi loh!!')"
                    oninput="this.setCustomValidity('')"
                  />
                </div>

                <button type="submit" class="btn btn-primary w-100">Masuk</button>
                <p class="text-center mt-3">
                  Belum punya akun? <a href="/register">Daftar</a>
                </p>
              </form>
            </div>
          </div>

          <div class="text-center mt-4">
            <div class="glow-box p-3 rounded">
              <h1 id="typing-text" class="h5 fw-bold"></h1>
              <p id="fade-text">Silakan masuk dengan email dan password kamu</p>
              <div class="animated-border mt-3"></div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <script src="/javascripts/logres.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
