<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <title>Riwayat Pemesanan</title>
   <link rel="stylesheet" href="/stylesheets/riwayat.css" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <%- include('partials/navbar') %>

  <div class="container mt-5 mb-5">
    <h2 class="mb-4">Riwayat Pemesanan</h2>

    <% if (riwayat.length === 0) { %>
      <div class="alert alert-info">Belum ada riwayat pemesanan.</div>
    <% } else { %>
      <div class="row">
        <% riwayat.forEach(item => { %>
          <div class="col-md-6 mb-4">
            <div class="card h-100 shadow-sm">
              <img src="/images/mobil/<%= item.gambar_kendaraan %>" class="card-img-top object-fit-cover" alt="<%= item.nama_kendaraan %>" style="height: 200px; width: 100%;">
              <div class="card-body">
                <h5 class="card-title"><%= item.nama_kendaraan %></h5>
                <p class="mb-1"><strong>Kategori:</strong> <%= item.nama_kategori %></p>
                <p class="mb-1"><strong>Lokasi:</strong> <%= item.lokasi %></p>
                <p class="mb-1"><strong>Supir:</strong> <%= item.nama_supir %> (<%= item.no_hp %>)</p>
                <p class="mb-1"><strong>Tanggal:</strong> <%= new Date(item.tanggal).toLocaleDateString('id-ID') %></p>
                <p class="mb-1"><strong>Waktu:</strong> <%= item.waktu_mulai %> - <%= item.waktu_selesai %></p>
                <p class="mb-1"><strong>Status:</strong> 
                  <% 
                    const status = item.status || 'menunggu';
                    if (status === 'menunggu') { 
                  %>
                    <span class="badge bg-warning text-dark">Menunggu</span>
                  <% } else if (status === 'disetujui') { %>
                    <span class="badge bg-success">Disetujui</span>
                  <% } else if (status === 'ditolak') { %>
                    <span class="badge bg-danger">Ditolak</span>
                  <% } else { %>
                    <span class="badge bg-secondary">Tidak diketahui</span>
                  <% } %>
                </p>
                <% if(item.keterangan) { %>
                  <p class="mb-1"><strong>Keterangan:</strong> <%= item.keterangan %></p>
                <% } %>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
    <% } %>

    <!-- Notifikasi -->
    <h2 class="mt-5 mb-4">Notifikasi Pemesanan</h2>

    <% if (typeof notifikasi === 'undefined' || notifikasi.length === 0) { %>
      <div class="alert alert-secondary">Tidak ada notifikasi saat ini.</div>
    <% } else { %>
      <div class="row">
        <% notifikasi.forEach(notif => { %>
          <div class="col-md-6 mb-4">
            <div class="card shadow-sm <%= notif.status_baca === 'belum' ? 'border-primary bg-light' : '' %>">
              <div class="card-body">
                <h5 class="card-title">
                  <%= notif.jenis === 'pengingat' ? 'ðŸ”” Pengingat' : 'ðŸ“© Status Pemesanan' %>
                </h5>
                <p class="card-text"><%= notif.isi_pesan %></p>
                <p class="card-text">
                  <small class="text-muted">Dikirim: <%= new Date(notif.waktu_kirim).toLocaleString('id-ID') %></small>
                </p>
                <% if (notif.status_baca === 'belum') { %>
                  <span class="badge bg-warning text-dark">Belum dibaca</span>
                <% } else { %>
                  <span class="badge bg-success">Sudah dibaca</span>
                <% } %>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
    <% } %>
  </div>

  <%- include('partials/footer') %>
</body>
</html>
