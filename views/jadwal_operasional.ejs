<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Jadwal Operasional Kendaraan</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
  <!-- Link ke CSS khusus -->
  <link rel="stylesheet" href="/stylesheets/jadwal_operasional.css" />
</head>
<body>
  <%- include('partials/navbar') %>

  <div class="container mt-4 jadwal-container">
    <h2 class="mb-4">Jadwal Operasional Kendaraan</h2>

    <table class="table jadwal-table">
      <thead>
        <tr>
          <th>No</th>
          <th>Nama Kendaraan</th>
          <th>Hari</th>
          <th>Jam Buka</th>
          <th>Jam Tutup</th>
        </tr>
      </thead>
      <tbody>
        <% if (jadwal.length === 0) { %>
          <tr>
            <td colspan="5" class="text-center">Tidak ada data</td>
          </tr>
        <% } else { %>
          <% jadwal.forEach((item, index) => { %>
            <tr>
              <td><%= index + 1 %></td>
              <td><%= item.nama_kendaraan %></td>
              <td><%= item.hari %></td>
              <td><%= item.jam_buka %></td>
              <td><%= item.jam_tutup %></td>
            </tr>
          <% }) %>
        <% } %>
      </tbody>
    </table>
  </div>

  <%- include('partials/footer') %>
</body>
</html>
